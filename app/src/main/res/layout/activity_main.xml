<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:text="Cricket Score"
    android:textSize="30dp"
    android:textStyle="bold"
    android:textAlignment="center"
    />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TableRow
            android:gravity="center">

            <!--button 1-->
            <Button
                android:id="@+id/ones"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:text="Single"
                />

            <!--button 2-->

            <Button
                android:id="@+id/twos"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:text="Double"
                />

            <!--button 3-->

            <Button
                android:id="@+id/fours"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:text="Boundary"
                />

        </TableRow>

       <TableRow
           android:gravity="center">

        <!--button 4-->
        <Button
            android:id="@+id/sixes"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:text="Six"
            />

        <!--button 5-->

        <Button
            android:id="@+id/wides"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:text="Wide"
            />

        <!--button 6-->

        <Button
            android:id="@+id/nbs"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:text="NB"
            />

        </TableRow>

    </TableLayout>
    <!--Score Title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:text="Scores"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/holo_purple"
        />
    <!--result-->
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!--Titles 1-->
        <TableRow
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Singles"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:textAlignment="center"/>

            <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Doubles"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_light"
            android:textAlignment="center"/>

            <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Boundary"
            android:textStyle="bold"
            android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:textAlignment="center"/>


        </TableRow>
        <!--Score 1-->
        <TableRow
            android:gravity="center">

            <TextView
                android:id="@+id/singles"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text=""
            android:textAlignment="center"

            android:textSize="18sp"
            android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/doubles"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text=""
                android:textAlignment="center"

                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/bound"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                tools:ignore="DuplicateIds" />

        </TableRow>
        <!--Titles 2-->
        <TableRow
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Sixes"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Wide"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="NB"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                android:textAlignment="center"/>


        </TableRow>
        <!--Score 2-->
        <TableRow
            android:gravity="center">

            <TextView
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/wide"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/nb"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                tools:ignore="DuplicateIds" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
    <Button
        android:id="@+id/reset"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Reset"
        android:textSize="18sp"
        android:textAlignment="center"/>

    </LinearLayout>


</LinearLayout>

</ScrollView>